/* app.wxss */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/* 全局样式 */
.container {
  padding: 20rpx;
}

.flex {
  display: flex;
}

.flex-1 {
  flex: 1;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

/* 主题色 */
.text-primary {
  color: #ee0a24;
}

.bg-primary {
  background-color: #ee0a24;
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

/* 边距 */
.m-0 { margin: 0; }
.mt-10 { margin-top: 20rpx; }
.mb-10 { margin-bottom: 20rpx; }
.ml-10 { margin-left: 20rpx; }
.mr-10 { margin-right: 20rpx; }

.p-0 { padding: 0; }
.pt-10 { padding-top: 20rpx; }
.pb-10 { padding-bottom: 20rpx; }
.pl-10 { padding-left: 20rpx; }
.pr-10 { padding-right: 20rpx; }

/* 卡片 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 按钮 */
.btn {
  display: inline-block;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  cursor: pointer;
}

.btn-primary {
  background-color: #ee0a24;
  color: #fff;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333;
}

.btn-small {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.btn-large {
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

/* 价格 */
.price {
  color: #ee0a24;
  font-weight: 600;
}

.price::before {
  content: '¥';
  font-size: 0.8em;
}

.original-price {
  color: #999;
  text-decoration: line-through;
}

.original-price::before {
  content: '¥';
  font-size: 0.8em;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  color: #fff;
}

.tag-new {
  background-color: #ff976a;
}

.tag-hot {
  background-color: #ee0a24;
}

.tag-sale {
  background-color: #07c160;
}

/* 列表项 */
.list-item {
  background: #fff;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #999;
}

/* 商品网格 */
.product-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.product-item {
  width: calc(50% - 10rpx);
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.product-item:nth-child(2n) {
  margin-right: 0;
}

.product-image {
  width: 100%;
  height: 280rpx;
  position: relative;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  line-height: 1.4;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ee0a24;
  margin-bottom: 8rpx;
}

.product-sales {
  font-size: 24rpx;
  color: #999;
}